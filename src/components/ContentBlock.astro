---
interface Props {
  title: string;
  image: string;
  dark?: boolean;
  textFirst?: boolean;
  squareImage?: boolean;
}

const {
  title,
  image,
  dark = false,
  textFirst = true,
  squareImage = false,
} = Astro.props;
---

<div
  class={`w-full ${
    dark ? "bg-palette-200" : "bg-palette-100"
  } flex flex-col lg:flex-row px-2 lg:px-0 py-8`}
>
  <img
    src={`${import.meta.env.BASE_URL}${image}`}
    alt="A picture of FaunaFinder in the Campus selection screen"
    class={`w-full mx-auto lg:w-1/5 object-scale-down max-h-96 lg:max-h-max ${
      squareImage ? "aspect-square" : "lg:object-scale-down 2xl:object-cover"
    } ${textFirst ? "lg:mr-[10%] lg:ml-0" : "lg:ml-[10%] lg:mr-0"} ${
      textFirst ? "order-2" : "order-1"
    }`}
  />
  <div
    class={`w-full flex flex-col lg:mx-[10%] ${
      textFirst ? "order-1" : "order-2"
    }`}
  >
    <h3
      class="text-palette-500 text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-6xl font-righteous"
    >
      {title}
    </h3>
    <p class="mt-8 text-lg w-full break-words hyphens-auto text-justify">
      <slot />
    </p>
    <slot name="button-slot" />
  </div>
</div>
