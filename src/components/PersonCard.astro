---
interface Props {
  name: string;
  role: string;
  imageUrl: string;
}

const { name, role, imageUrl } = Astro.props;
---

<a class="mx-auto w-3/4 sm:w-2/5 md:w-1/2 p-2 lg:w-1/4 flex flex-col bg-white shadow-md shadow-palette-500 rounded-md" href={`${import.meta.env.BASE_URL}the-team/${name.replace(" ", "-").toLowerCase()}`}>
  <img src={imageUrl} class="m-4 aspect-square object-cover" />
  <h2
    class="uppercase font-bold text-lg md:text-2xl 2xl:text-4xl mx-auto text-center my-4"
  >
    {name}
  </h2>
  <h3
    class="uppercase text-md md:text-xl 2xl:text-3xl mx-auto text-center mb-4"
  >
    {role}
  </h3>
</a>
