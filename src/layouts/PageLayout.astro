---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono&family=Libre+Franklin&family=Montserrat&family=Roboto+Condensed&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-palette-100">
    <Navbar active="home" />
    <div class="mt-16 bg-palette-500 flex flex-col">
      <h1
        class="text-4xl md:text-6xl lg:text-8xl mx-auto font-franklin font-bold"
      >
        {title}
      </h1>
      <h2 class="mx-auto font-ibm text-lg md:text-xl lg:text-2xl">
        {subtitle}
      </h2>
    </div>
    <slot />
    <Footer />
  </body>
</html>
