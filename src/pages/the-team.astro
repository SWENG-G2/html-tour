---
import PageLayout from "../layouts/PageLayout.astro";
import { people } from "../data/people.json";
---

<PageLayout
  title="Meet the team"
  subtitle="See the faces behind the production of FaunaFinder"
  active="the team"
>
  <div
    class="p-4 md:p-16 lg:p-32 bg-palette-100 flex flex-col gap-2 md:gap-8 lg:gap-16 xl:gap-32 2xl:gap-40 uppercasem font-montserrat"
  >
    <div class="grid grid-cols-1 grid-rows-4 md:grid-cols-4 md:grid-rows-1">
      {
        people.slice(0, 4).map((person) => (
          <a
            class="relative flex flex-col mb-6 md:mb-0 cardShadow cardScale"
            href={`${import.meta.env.BASE_URL}the-team/${person.name.toLowerCase().replaceAll(" ", "-")}`}
          >
            <img
              class="mx-auto aspect-square object-cover w-28 md:w-36 lg:w-44 xl:w-56 2xl:w-64 rounded-full shadow-2xl shadow-palette-700"
              src={`${import.meta.env.BASE_URL}${person.image}`}
            />
            <h4 class="font-black text-base md:text-lg lg:text-xl xl:text-2xl 2xl:text-4xl mt-2 md:mt-4 text-center">
              {person.name}
            </h4>
            <h3 class="text-sm md:text-base lg:text-lg xl:text-xl 2xl:text-2xl text-center">
              {person.role}
            </h3>
          </a>
        ))
      }
    </div>
    <div class="grid grid-cols-1 grid-rows-4 md:grid-cols-4 md:grid-rows-1">
      {
        people.slice(4, 8).map((person) => (
          <a
            class="relative flex flex-col mb-6 md:mb-0 cardShadow cardScale"
            href={`${import.meta.env.BASE_URL}the-team/${person.name.toLowerCase().replaceAll(" ", "-")}`}
          >
            <img
              class="mx-auto aspect-square object-cover w-28 md:w-36 lg:w-44 xl:w-56 2xl:w-64 rounded-full shadow-2xl shadow-palette-700"
              src={`${import.meta.env.BASE_URL}${person.image}`}
            />
            <h4 class="font-black text-base md:text-lg lg:text-xl xl:text-2xl 2xl:text-4xl mt-2 md:mt-4 text-center">
              {person.name}
            </h4>
            <h3 class="text-sm md:text-base lg:text-lg xl:text-xl 2xl:text-2xl text-center">
              {person.role}
            </h3>
          </a>
        ))
      }
    </div>
    <div class="grid grid-cols-1 grid-rows-3 md:grid-cols-3 md:grid-rows-1">
      {
        people.slice(8, 11).map((person) => (
          <a
            class="relative flex flex-col mb-6 md:mb-0 cardShadow cardScale"
            href={`${import.meta.env.BASE_URL}the-team/${person.name.toLowerCase().replaceAll(" ", "-")}`}
          >
            <img
              class="mx-auto aspect-square object-cover w-28 md:w-36 lg:w-44 xl:w-56 2xl:w-64 rounded-full shadow-2xl shadow-palette-700"
              src={`${import.meta.env.BASE_URL}${person.image}`}
            />
            <h4 class="font-black text-base md:text-lg lg:text-xl xl:text-2xl 2xl:text-4xl mt-2 md:mt-4 text-center">
              {person.name}
            </h4>
            <h3 class="text-sm md:text-base lg:text-lg xl:text-xl 2xl:text-2xl text-center">
              {person.role}
            </h3>
          </a>
        ))
      }
    </div>
  </div>
</PageLayout>

<style>
  .cardShadow {
    @apply after:opacity-0 after:hover:opacity-100 after:transition-opacity after:ease-in after:duration-100 after:rounded-lg after:shadow-md after:content-[''] after:absolute after:w-full after:h-full;
  }
  .cardScale {
    @apply scale-100 hover:scale-110 transition-transform duration-150;
  }
</style>
